#include <stdio.h>

struct distances{
	int inch;
	int feet;
};

void distances1(struct distances d1);
void distances2(struct distances d2);



int main(void){

	distances1(d1);
	distances2(d2);


	return 0;
}

void distances1(struct distances d1){
	printf("Enter the first distance in feet and inches:\n");
	printf("Feet:");
	fflsuh(stdout);
	scanf("%d",&d1.feet);
	printf("Inches:");
	fflush(stdout);
	scanf("%d",&d1.inch);

}

void distances2(struct distances d2){
	printf("Enter the second distance in feet and inches:\n");
	printf("Feet:");
	fflsuh(stdout);
	scanf("%d",&d2.feet);
	printf("Inches:");
	fflush(stdout);
	scanf("%d",&d2.inch);

}



